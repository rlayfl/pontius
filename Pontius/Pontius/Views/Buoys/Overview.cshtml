<ul>
    @foreach (var buoy in buoyTypes)
    {
        <li>
            <strong>@buoy.Key</strong>: @buoy.Value.Description
            <br />
            <img src="@buoy.Value.ImageUrl" alt="@buoy.Key" style="height:40px;" />
        </li>
    }
</ul>

@Html.Raw(trinityHouseInfo)

@Html.Raw(buoyHistoryInfo)

@Html.Raw(trinityHouseHistoryInfo)

<form id="startTestForm" onsubmit="startTest(); return false;">

    <button type="submit" class="btn btn-primary">Begin Test</button>

</form>

