@{
    ViewData["Title"] = "Experiment - Start";
}

@{
    var experimentType = User?.FindFirst("experimenttype")?.Value;
}

@switch (experimentType)
{
    case "Competition":
        <div class="alert">You have selected Experiment Type A.</div>
        break;
    default:
        <div class="alert alert-secondary">Unknown experiment type selected.</div>
        break;
}

@{
    
    var trinityHouseInfo = @"
    <ul>
    <li>Official name: The Corporation of Trinity House of Deptford Strond.</li>
    <li>Also known as: Trinity House.</li>
    <li>Formal title: The Master, Wardens and Assistants of the Guild Fraternity or Brotherhood of the most glorious and undivided Trinity and of St Clement in the Parish of Deptford Strond in the County of Kent.</li>
    <li>Official authority for lighthouses in:
        <ul>
        <li>England</li>
        <li>Wales</li>
        <li>The Channel Islands</li>
        <li>Gibraltar</li>
        </ul>
    </li>
    <li>Responsible for other navigational aids, including:
        <ul>
        <li>Lightvessels</li>
        <li>Buoys</li>
        <li>Maritime radio/satellite communication systems</li>
        </ul>
    </li>
    <li>Official deep sea pilotage authority for ships trading in Northern European waters.</li>
    <li>Maritime charity activities:
        <ul>
        <li>Welfare of retired seamen</li>
        <li>Training of young cadets</li>
        <li>Promotion of safety at sea</li>
        </ul>
